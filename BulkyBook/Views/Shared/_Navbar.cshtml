@using Microsoft.AspNetCore.Http
@using Utility
@inject IHttpContextAccessor HttpContextAccessor
<header>
  <nav class="navbar navbar-expand-lg navbar-dark bg-primary mb-4">
    <div class="container-fluid">
      <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">BulkyBook</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarColor01">
        <ul class="navbar-nav me-auto">
          <li class="nav-item">
            <a class="nav-link" asp-area="Customer" asp-controller="Home" asp-action="Index">Books</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" asp-area="Customer" asp-controller="Home" asp-action="Privacy">Privacy</a>
          </li>
          @if (User.IsInRole(SD.ROLE_ADMIN) || User.IsInRole(SD.ROLE_EMPLOYEE)) {
           <li class="nav-item dropdown">
              <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Admin</a>
              <div class="dropdown-menu">
                <a class="dropdown-item" asp-area="Admin" asp-controller="Categories" asp-action="Index">Categories</a>
                <a class="dropdown-item" asp-area="Admin" asp-controller="CoverTypes" asp-action="Index">CoverTypes</a>
                <a class="dropdown-item" asp-area="Admin" asp-controller="Products" asp-action="Index">Products</a>
                <a class="dropdown-item" asp-area="Admin" asp-controller="Companies" asp-action="Index">Companies</a>
                <div class="dropdown-divider"></div>
                <a class="dropdown-item" asp-area="Admin" asp-controller="Orders" asp-action="Index">Orders</a>
              </div>
            </li> 
          }
        </ul>
        @* <form class="d-flex"> *@
        @*   <input class="form-control me-sm-2" type="text" placeholder="Search"> *@
        @*   <button class="btn btn-secondary my-2 my-sm-0" type="submit">Search</button> *@
        @* </form> *@
      </div>
      <partial name="_LoginPartial"/>
      <ul class="navbar-nav">
        <li class="nav-item">
          <a class="nav-link cart" asp-area="Customer" asp-controller="Cart" asp-action="Details">
            <i class="bi bi-bag"></i>
            <span>@await Component.InvokeAsync("Cart")</span>
          </a>
        </li>
      </ul>
    </div>
  </nav>
</header>